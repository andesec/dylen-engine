# DGS Service Configuration

# Security
DGS_DEV_KEY=local-dev-secret-key

# CORS
DGS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# AI Provider Configuration (Gemini + OpenRouter)
# -----------------------------------------------

# Gatherer: Uses a powerful model to research the topic
DGS_GATHERER_PROVIDER=gemini
DGS_GATHERER_MODEL=gemini-1.5-pro

# Structurer: Uses a fast model to generate the lesson JSON
DGS_STRUCTURER_PROVIDER=gemini
DGS_STRUCTURER_MODEL=gemini-1.5-flash

# Repair: Uses the lightweight model for quick JSON fixes
DGS_REPAIR_PROVIDER=gemini
DGS_REPAIR_MODEL=gemini-1.5-flash-lite

# Optional: Override structurer based on request 'mode' (fast/balanced/best)
# DGS_STRUCTURER_MODEL_FAST=gemini-1.5-flash
# DGS_STRUCTURER_MODEL_BALANCED=gemini-1.5-flash
# DGS_STRUCTURER_MODEL_BEST=gemini-1.5-pro

# API Keys (REQUIRED)
GEMINI_API_KEY=your_gemini_api_key_here
# OpenRouter is used when DGS_*_PROVIDER=openrouter or when the request selects OpenRouter models.
OPENROUTER_API_KEY=your_openrouter_api_key_here
# Optional OpenRouter attribution headers.
# OPENROUTER_HTTP_REFERER=https://your-app.example
# OPENROUTER_TITLE=YourAppName

# DynamoDB Configuration
DGS_DDB_TABLE=dgs-lessons-local
AWS_REGION=us-east-1
DGS_DDB_ENDPOINT_URL=http://localhost:8000

# Schema & Prompts
DGS_SCHEMA_VERSION=1.0
DGS_PROMPT_VERSION=v1

# Optional Configuration
DGS_MAX_TOPIC_LENGTH=200
DGS_TENANT_KEY=TENANT#default
DGS_LESSON_ID_INDEX=lesson-id-index
